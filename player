import random

#pasting this everywhere to keep track of all the items
#items = blueberry , twig , branch , bark , stone , pebbles , string
#

inv = {
    "blueberry" : 4,
    "twig" : 2
    }

class player(object):
    def __init__(self, exp, money, inventory):
        self.exp = exp
        self.money = money
        self.inv = inventory


    def player_stats(self):
        print("Your money is at " + str(self.money) + " silver,")
        print("you have " + str(self.exp) + " experience and")
        print("your inventory contains: ")
        print_inv()

    def balance_down(self, total):
        self.money = self.money - total

    def balance_up(self, total):
        self.money = self.money + total

def print_inv():
    for key in inv:
        print (str(key) + " - " + str(inv[key]))

def add_inv(item):
    if item in inv:
        inv[item] = inv[item] + 1
    else:
        inv[item] = 1

def remove_inv(item):
    if item in inv:
        if inv[item] > 0:
            inv[item] = inv[item] - 1
            if inv[item] == 0:
                del inv[item]
        else:
            print ("You can't! It's listed but something's broken.")
    else:
        print ("You can't! You don't have any.")

def check_inv(item):
    if item in inv:
        return True
    else:
        return False
    
pc = player(0, 15, inv)
