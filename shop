import random
    

class item(object):
    def __init__(self, name, baseBuy, baseSell, sellable, star):
        self.name = name
        self.buy = baseBuy
        self.sell = baseSell
        self.sellable = sellable
        self.star = star

    def sale(self):
        if self.sellable == True:
            print ("You can sell that " + str(self.name) + " for " + str(self.sell) + ". ")
            sale1 = str( raw_input("Do you want to? y/n "))
            if sale1 == 'y':
                import player as player
                sellPrice = self.sell
                sellItem = self.name
                player.player.selling(sellPrice, sellItem)
            elif sale1 == 'n':
                print ("Maybe next time then.")
        elif self.sellable == False:
            print ("Noboby wants to buy your " + str(self.name) + ". Maybe you should try selling something else.")
            print (" ")
            
    def purchase(self):
        buyItem = self.name
        buyPrice = int(self.buy)
        print ("You can purchase a " + str(buyItem) + " for " + str(buyPrice) + ". ")
        import main as main
        main.purchaseHome(buyItem, buyPrice)

    def isSellable(self):
        if self.sellable == True:
            print self.name


